<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txt_clickuserpic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload User Picture"
            android:textColor="@color/shadow"
            android:textSize="16sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"/>

        <ImageView
            android:id="@+id/iv_picclick"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@+id/txt_clickuserpic"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:src="@drawable/user"
            android:background="@drawable/item_pic_back_rect"
            android:padding="15dp"
            tools:ignore="UseAppTint" />


        <TextView
            android:id="@+id/txt_clickdocpic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload Docuement"
            android:textColor="@color/shadow"
            android:textSize="16sp"
            android:layout_below="@+id/iv_picclick"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"/>

        <ImageView
            android:id="@+id/iv_docclick"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@+id/txt_clickdocpic"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:src="@drawable/edit_profile"
            android:background="@drawable/item_pic_back_rect"
            android:padding="15dp"
            tools:ignore="UseAppTint" />

        <TextView
            android:id="@+id/txt_clickcontractpic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload Agreement Form"
            android:textColor="@color/shadow"
            android:textSize="16sp"
            android:layout_below="@+id/iv_docclick"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"/>

        <ImageView
            android:id="@+id/iv_contractclick"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@+id/txt_clickcontractpic"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:src="@drawable/edit_profile"
            android:background="@drawable/item_pic_back_rect"
            android:padding="15dp"
            tools:ignore="UseAppTint" />

        <CheckBox
            android:id="@+id/checkboxAgreement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/iv_contractclick"
            android:text="I agree to the terms and conditions" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/l3_btn_preview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Preview"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:textAllCaps="false"
            android:background="@drawable/thm_btn_back"
            android:layout_below="@+id/checkboxAgreement"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            android:layout_marginHorizontal="20dp"
            android:padding="15dp"
            android:translationZ="8dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/l3_btn_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:textAllCaps="false"
            android:background="@drawable/thm_btn_back"
            android:layout_below="@+id/checkboxAgreement"
            android:layout_alignParentEnd="true"
            android:layout_alignEnd="@+id/l3_btn_preview"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            android:layout_marginHorizontal="20dp"
            android:padding="15dp"
            android:translationZ="8dp"/>

    </RelativeLayout>



</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@drawable/bg_box"
    android:layout_marginHorizontal="10dp"
    android:translationZ="8dp">

    <ImageView
        android:id="@+id/iv_pic_customer"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:background="@drawable/adbanner_bg"
        android:layout_margin="8dp"
        android:scaleType="centerCrop"
        android:padding="20dp"
        android:layout_alignParentStart="true"/>
    
    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/iv_pic_customer"
        android:layout_alignTop="@+id/iv_pic_customer"
        android:layout_alignBottom="@+id/iv_pic_customer"
        android:gravity="center"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="10dp">

        <TextView
            android:id="@+id/tv_cust_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Customer Name"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/tv_cust_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Customer Number"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginStart="10dp"
            android:layout_below="@+id/tv_cust_name"
            android:layout_marginTop="6dp"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/tv_cust_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Customer Address"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginStart="10dp"
            android:layout_below="@+id/tv_cust_number"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="5dp"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center|end"
        android:layout_below="@+id/rl1"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp">

<!--        <ImageView-->
<!--            android:id="@+id/iv_statusunlock"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:src="@drawable/unlock"-->
<!--            android:tint="@color/thm_darkGreen"-->
<!--            tools:ignore="UseAppTint" />-->

        <TextView
            android:id="@+id/tv_cust_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="    Unlocked     "
            android:gravity="center"
            android:layout_marginStart="10dp"
            android:textColor="@color/thm_darkGreen"
            android:textSize="14sp"
            android:layout_marginHorizontal="5dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_seemore"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="See more"
            android:textSize="14sp"
            android:textColor="#045F85"
            android:textAllCaps="false"
            android:background="@drawable/thm_btn_back"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginVertical="5dp"/>

    </LinearLayout>

</RelativeLayout>
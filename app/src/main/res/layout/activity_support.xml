<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/thm_midgreendark"
    tools:context=".SupportActivity">

    <Toolbar
        android:id="@+id/myToolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/thm_darkgreenwhite"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/iv_supportBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back"
            android:tint="@color/black"
            android:gravity="center"
            tools:ignore="UseAppTint" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivuser"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="30dp"
            android:src="@drawable/user"
            app:shapeAppearanceOverlay="@style/CircularImageView"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="@+id/linearLayout2"
            app:layout_constraintEnd_toStartOf="@+id/linearLayout2"
            app:layout_constraintTop_toTopOf="@+id/linearLayout2" />

        <TextView
            android:id="@+id/tv_adminName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chat with Admin"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_gravity="center"/>

    </Toolbar>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_adminChat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/myToolbar"
        android:layout_above="@+id/llmessagebar"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="5dp"/>

    <LinearLayout
        android:id="@+id/llmessagebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp">

        <com.vanniktech.emoji.EmojiEditText
            android:id="@+id/etm_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:hint="Type your text here"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:background="@drawable/adbanner_bg"
            android:paddingHorizontal="10dp"
            android:paddingVertical="20dp"
            android:textSize="14dp" />


        <ImageView
            android:id="@+id/bu_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:padding="8dp"
            android:layout_marginEnd="5dp"
            android:layout_gravity="center"
            android:src="@drawable/send"
            />

    </LinearLayout>

</RelativeLayout>
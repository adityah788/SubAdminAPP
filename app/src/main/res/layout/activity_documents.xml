<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Documents"
    android:background="@color/thm_midgreendark">

    <Toolbar
        android:id="@+id/myToolbar8"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/thm_darkgreenwhite"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/iv_seedocumentsBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back"
            android:tint="@color/black"
            android:gravity="center"
            tools:ignore="UseAppTint" />

        <TextView
            android:id="@+id/tv_SeedocumentsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Documents"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_gravity="center"/>

    </Toolbar>


<!--    <androidx.recyclerview.widget.RecyclerView-->
<!--        android:id="@+id/rv_documents"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent"-->
<!--        android:layout_centerHorizontal="true"-->
<!--        android:layout_below="@+id/myToolbar8"-->
<!--        android:layout_marginTop="10dp"-->
<!--        android:layout_marginStart="10dp"-->
<!--        />-->


    <RelativeLayout
        android:id="@+id/doc_rl_user_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/myToolbar8"
        android:background="@drawable/bg_whitebox"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="50dp"
        android:padding="10dp"
        android:translationZ="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="5dp"
            android:layout_marginBottom="5dp">

            <TextView
                android:id="@+id/txv_doc_user_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="User Image"
                android:paddingVertical="5dp"
                android:textSize="22sp"/>

            <TextView
                android:id="@+id/txv_doc_aadhar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Aadhar"
                android:textSize="22sp"
                android:paddingVertical="5dp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/txv_doc_contract"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contract "
                android:textSize="22sp"
                android:paddingVertical="5dp"
                android:layout_marginTop="10dp"/>

        </LinearLayout>



    </RelativeLayout>

</RelativeLayout>